<openerp>
    <data>

        <!-- VIEW FOR THE OBJECT : account_invoice -->

        <record id="view_account_invoice_form" model="ir.ui.view">
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form" />
            <field name="arch" type="xml">
                <button name="invoice_open" position="after">
                        <button name="create_intercompany_invoice"
                                string="Create intercompany invoice"
                                type="object"
                                attrs="{'invisible':[('customer_related_invoice_id', '!=', False), ('state', 'not in', ['open','done'])]}"/>
                </button>
                <field name="origin" position="after">
                    <field name="customer_related_invoice_id" invisible="1"/>
                </field>
            </field>
        </record>

    </data>
</openerp>
